doctype html
html
	head
		title="Sign in"
		link(rel="stylesheet", href="css/bootstrap.min.css")
		link(rel="stylesheet", href="css/custom.css")
	body
		div.header
			nav(class="navbar navbar-inverse" role="navigation")
				div.container-fluid
					div.navbar-hearder
						button(type="button" class="navbar-toggle collapsed" data-toggle="collapsed" data-target="#bs-example-navbar-navbar-collapse-1")
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a(class="navbar-brand" href="/") College Clubs MN

						//Collect the nav links and other content for toggling
						div(class="collapse navbar-collapse" id="bs-example-navbar-collapse-1")
							if(isSignedIn)
								ul(class="nav navbar-nav")
									li
										a(href="/clubs") Clubs
							ul(class="nav navbar-nav navbar-right")
								li.active
									a(href="/signin") Sign in
								li
									a(href="/signup") Sign up

		div.content
			div.jumbotron
				form(method="post" action="/signin" class="form-horizontal" role="form")
					div.form-group
						label(for="inputEmail" class="col-sm-2 control-label") E-mail
						div.col-sm-3
							label(class="label label-danger") #{error_message}
							input(name="email" type="email" class="form-control" id="inputEmail" placeholder="Yohannes.Seifu@live.bemidjistate.edu" required=true)
					div.form-group
						label(for="inputPassword" class="col-sm-2 control-label") Password
						div.col-sm-3
							input(name="password" type="password" class="form-control" id="inputpassword" placeholder="Password" required=true)
					div.form-group
						div(class="col-sm-offset-2 col-sm-10")
							button(type="submit" class="btn btn-default") Sign in!

		div.footer